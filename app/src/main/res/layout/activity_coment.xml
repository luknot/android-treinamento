<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f4f4f4"
        >




        <LinearLayout
            android:layout_margin="1dp"
            android:background="#9f9f9f"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">


            <EditText
                android:hint="Qual marca?"
                android:textColor="#9f9f9f"
                android:textColorHint="#9f9f9f"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:paddingLeft="5dp"
                android:id="@+id/marca"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="1dp"
            android:background="#9f9f9f"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">


            <EditText
                android:hint="Qual modelo?"
                android:textColor="#9f9f9f"
                android:textColorHint="#9f9f9f"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:paddingLeft="5dp"
                android:id="@+id/modelo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingRight="8dp"
                android:paddingLeft="3dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classifique:"/>



            <ImageView
                android:layout_marginBottom="4dp"
                android:id="@+id/btn_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_star_off"
                android:onClick="clickStar1"/>
            <ImageView
                android:layout_marginBottom="4dp"
                android:id="@+id/btn_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_star_off"
                android:onClick="clickStar2"/>
            <ImageView
                android:layout_marginBottom="4dp"
                android:id="@+id/btn_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_star_off"
                android:onClick="clickStar3"/>
            <ImageView
                android:layout_marginBottom="4dp"
                android:id="@+id/btn_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_star_off"
                android:onClick="clickStar4"/>
            <ImageView
                android:layout_marginBottom="4dp"
                android:id="@+id/btn_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_star_off"
                android:onClick="clickStar5"/>

        </LinearLayout>



        <LinearLayout
            android:layout_margin="1dp"
            android:background="#9f9f9f"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">


            <EditText
                android:hint="Comente mais sobre o seu Headphone..."
                android:textColor="#9f9f9f"
                android:textColorHint="#9f9f9f"
                android:background="#ffffff"
                android:layout_margin="2dp"
                android:paddingLeft="5dp"
                android:id="@+id/comentario"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="20sp"/>

        </LinearLayout>




        <Button
            android:id="@+id/btn_enviar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textSize="20sp"
            android:background="#2b9dff"
            android:textColor="#ffffff"
            android:onClick="recuperarSenha"/>




    </LinearLayout>

</ScrollView>