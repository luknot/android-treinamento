<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.labm4.projeto_redesocial" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".criaConta"
            android:label="@string/title_activity_cria_conta"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.labm4.projeto_redesocial.MainActivity" />
        </activity>
        <activity
            android:name=".esqueciSenha"
            android:label="@string/title_activity_esqueci_senha"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.labm4.projeto_redesocial.MainActivity" />
        </activity>
        <activity
            android:name=".home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".enviarComent"
            android:label="@string/title_activity_enviar_coment"
            android:parentActivityName=".home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.labm4.projeto_redesocial.home" />
        </activity>
        <activity
            android:name=".Coment"
            android:label="@string/title_activity_coment"
            android:parentActivityName=".home" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.labm4.projeto_redesocial.home" />
        </activity>
    </application>

</manifest>
